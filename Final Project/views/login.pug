                    script(src='loginassets/vendor/bootstrap/js/popper.js')
                    script(src='loginassets/vendor/bootstrap/js/bootstrap.min.js')
                    script(src='loginassets/vendor/select2/select2.min.js')
                    script(src='loginassets/vendor/daterangepicker/moment.min.js')
                    script(src='loginassets/vendor/daterangepicker/daterangepicker.js')
                    script(src='loginassets/vendor/countdowntime/countdowntime.js')
                    script(src='loginassets/js/main.js')
